<p id="notice"><%= notice %></p>

<h1 class="text-center">Movie Reviews</h1>
<%= link_to 'New Movie Review', new_movie_review_path, {:style =>'margin: 20px 0;', :class => "btn btn-outline-primary"} %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th scope="col" class="text-center">User</th>
      <th scope="col" class="text-center">Movie</th>
      <th scope="col" class="text-center">Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_reviews.each do |movie_review| %>
      <tr>
        <td><%= movie_review.user_id %></td>
        <td><%= movie_review.movie_id %></td>
        <td><%= movie_review.review %></td>
        <td><%= link_to 'Show', movie_review %></td>
        <td><%= link_to 'Edit', edit_movie_review_path(movie_review) %></td>
        <td><%= link_to 'Destroy', movie_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

